<Page x:Class="SubtitleTools.UI.Pages.ShiftTimingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SubtitleTools.UI.Pages"
      xmlns:ctrl="clr-namespace:SubtitleTools.UI.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="300"
      Title="Shift Timings">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Margin="8" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Text="Amount" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <ctrl:NumericTextBox Grid.Row="1" Width="100" Margin="8,0,0,0" VerticalAlignment="Center" />
            <Button Grid.Column="1" Grid.Row="1" Content="Reset" VerticalAlignment="Center" Margin="8,0,4,0"/>
            <Button Grid.Column="2" Grid.Row="1" Content="Set From Video" VerticalAlignment="Center" Margin="4,0,8,0"/>

            <TextBlock Grid.Row="2" Text="Apply To" FontWeight="SemiBold" Margin="0,8,0,4"/>
            <StackPanel Grid.Row="3" Grid.ColumnSpan="4" Margin="8,4,0,4" HorizontalAlignment="Left">
                <RadioButton Content="_All subtitles"/>
                <RadioButton Content="_Selected subtitles"/>
                <RadioButton Content="From _first subtitle to selection"/>
                <RadioButton Content="From selection to _last subtitle"/>
            </StackPanel>

            <TextBlock Grid.Row="4" Grid.ColumnSpan="4" Text="Tip: use Shift+Plus/Minus (on the numpad) to shift timings from the main window." TextWrapping="Wrap" TextAlignment="Left" HorizontalAlignment="Left" Margin="16,8,0,0" />

            <Button Grid.ColumnSpan="4" Grid.Row="5" Content="Apply" MinWidth="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,8,8"/>
        </Grid>
    </ScrollViewer>
</Page>
